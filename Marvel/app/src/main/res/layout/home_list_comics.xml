<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/midnight">

    <ImageView
        android:id="@+id/ivComicsPoster"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:padding="3dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvComicsName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvComicsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="#numero"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ivComicsPoster"
        app:layout_constraintTop_toBottomOf="@id/ivComicsPoster" />

</androidx.constraintlayout.widget.ConstraintLayout>